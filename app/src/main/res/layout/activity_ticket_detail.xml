<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ticketDetailToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/ticket_detailActivityTitle"
        />


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/ticket_detail_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ticketDetailToolBar"
        tools:openDrawer="start">

        <RelativeLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            >


    <ImageView
        android:id="@+id/ticket_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"

        />
            <ProgressBar
                android:id="@+id/image_progressBar"
                style="@android:style/Widget.ProgressBar.Large"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticket_image_view"/>

    <TextView
        android:id="@+id/ticket_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Title"
        android:layout_below="@+id/image_progressBar"
        />
    <TextView
        android:id="@+id/ticket_startDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Title"
        android:layout_below="@+id/ticket_name"
        />
    <TextView
        android:id="@+id/ticket_priceMin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Title"
         android:layout_below="@+id/ticket_startDateTime"
        />
    <TextView
        android:id="@+id/ticket_priceMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Title"
        android:layout_below="@+id/ticket_priceMin"
        />

    <TextView
        android:id="@+id/ticket_URL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Href"
        android:layout_below="@+id/ticket_priceMax"
        />
    <Button
        android:id="@+id/buttonDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticket_URL"
        android:layout_centerHorizontal="true"
        android:text="Save"
        />
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:menu="@menu/ticket_menu"
            android:id="@+id/ticket_detail_nav_view"
            />



    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>
